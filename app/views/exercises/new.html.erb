<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card form-card">
        <div class="card-header">
          <h3 class="card-title text-center">Добавить новое упражнение</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @exercise, local: true, class: 'needs-validation', novalidate: true do |form| %>
            <div class="form-group">
                <%= form.label :name, "Название", class: 'form-label' %>
                <%= form.text_field :name, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <%= form.label :description, "Описание", class: 'form-label' %>
                <%= form.text_area :description, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <%= form.label :equipment, "Оборудование", class: 'form-label' %>
                <%= form.text_field :equipment, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
                <%= form.label :tags, "Теги (через запятую)", class: 'form-label' %>
                <%= form.text_area :tags, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= form.label :picture, "Фотография", class: 'form-label' %>
                <%= form.file_field :picture, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= form.submit 'Сохранить', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
